<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light"> <!-- colorPrimary is used for the default action bar background -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/light_overlay</item>
        <item name="colorPrimaryDark">@color/dark_overlay</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.ToolbarStyle" parent="AppTheme">
        <item name="android:textColorPrimary">@color/primary_light</item>
        <item name="android:textColorSecondary">@color/primary_light</item>
        <item name="actionMenuTextColor">@color/primary_light</item>
    </style>

</resources>
